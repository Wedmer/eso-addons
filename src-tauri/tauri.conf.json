{
  "build": {
    "beforeBuildCommand": "npm run build && npm run export",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "eso-addon-manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.arviceblot.eso-addons",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "cli": {
      "description": "Cross-platform tool for managing addons for The Elder Scrolls Online",
      "args": [
        {
          "name": "config",
          "description": "Path to the JSON config file",
          "short": "c",
          "takesValue": true,
          "required": false
        }
      ],
      "subcommands": {
        "add": {
          "description": "Add a new addon",
          "args": [
            {
              "name": "addon-id",
              "description": "Numeric ID of the addon(s) to install (see search)",
              "short": "i",
              "takesValue": true,
              "multiple": true,
              "required": true
            }
          ]
        },
        "clean": {
          "description": "Uninstall not managed addons",
          "args": [
            {
              "name": "remove",
              "description": "Remove the addons rather than just listing them",
              "short": "r",
              "takesValue": false
            }
          ]
        },
        "list": {
          "description": "List status of addons"
        },
        "remove": {
          "description": "Uninstall addon",
          "args": [
            {
              "name": "addon-id",
              "description": "Numeric ID of the addon(s) to remove (see list for installed IDs)",
              "short": "i",
              "takesValue": true,
              "multiple": true,
              "required": true
            }
          ]
        },
        "search": {
          "description": "Search addons",
          "args": [
            {
              "name": "search-string",
              "description": "String to search addons for",
              "short": "s",
              "takesValue": true,
              "required": true
            }
          ]
        },
        "update": {
          "description": "Update addons",
          "args": [
            {
              "name": "addon-id",
              "description": "Numeric ID of the addon(s) to update (see list for installed IDs)",
              "short": "i",
              "takesValue": true,
              "multiple": true,
              "required": false
            }
          ]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "ESO Addon Manager",
        "width": 1280
      }
    ]
  }
}